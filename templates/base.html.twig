<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}
                Wired Beauty
                                            
                            
            {% endblock %}
        </title>
        <script src="https://cdn.tailwindcss.com"></script>
        <script>
            tailwind.config = {
              theme: {
                extend: {
                  colors: {
                    'wiredblue': '#9CB3C8',
                    'wiredgreen': '#697B61'
                  }
                }
              }
            }
          </script>
    </head>
    <body>
        <div class="w-full min-h-screen">
            <nav class="px-24 py-8 max-w-screen-xl mx-auto">
                <div class="flex">
                    <div class="basis-1/3">
                        <img class="h-8 w-auto sm:h-10" src="https://tailwindui.com/img/logos/workflow-mark-indigo-600.svg" />
                    </div>
                    <div class="basis-2/3">
                        <ul class="flex items-center justify-between h-full">
                            {% for menu in menus %}
                                <li>
                                    <a href="">
                                        {{ menu }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </nav>
            {% block content %}{% endblock %}
        </div>
    </body>
</html>
