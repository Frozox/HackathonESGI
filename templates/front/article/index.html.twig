{% extends 'base.html.twig' %}

{% block content %}
	<div class="px-24 py-8 max-w-screen-xl mx-auto mt-12">
		<div class="flex">
			<h2 class="pt-4 text-4xl sm:text-3xl lg:text-4xl tracking-tighter leading-tight w-[200px]">
				Articles
			</h2>
			<div class="border-solid border-b-2 w-full"></div>
		</div>
	</div>
	<div class="container mt-4 mx-auto">
		<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
			{% for article in articles %}
				<a href="{{ article.getId() }}">
					<div class="card m-2 cursor-pointer border border-gray-400 rounded-lg hover:shadow-md hover:border-opacity-0 transform hover:-translate-y-1 transition-all duration-200">
						<div class="m-3">
							<h2 class="text-lg mb-2">{{ article.title}}
								<span class="text-sm text-teal-800 font-mono bg-teal-100 inline rounded-full px-2 align-top float-right animate-pulse">{{article.category}}</span>
							</h2>
							<p class="font-light font-mono text-sm text-gray-700 hover:text-gray-900 transition-all duration-200">{{article.body|raw}}</p>
						</div>
					</div>
				</a>
			{% endfor %}
		</div>
	</div>
{% endblock %}
